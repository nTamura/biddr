<div id="favorite">
  <% if user_signed_in? && can?(:favorite, @auction) %>
    <div class="">
      <% if @auction.favorited_by?(current_user) %>

      <%= link_to fa_icon("heart"), auction_favorite_path(@auction, @auction.favorite_for(current_user)), class: "favorites", method: :delete, remote: true %> Favorited!
    <% else %>
      <%= link_to fa_icon("heart-o"), auction_favorites_path(@auction), class: "favorites", method: :post, remote: true %> Favorite?
    <% end %>
  </div>
  <% end %>
</div>
