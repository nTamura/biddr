<div id='<%= dom_id(bid) %>'>

<strong><%= bid.user.username %></strong> offered: <%= bid.price %>

<div class="pull-right">

  <% if can? :delete, @bid %>
  <%= link_to 'Delete', auction_bid_path(@auction, bid), method: :delete, data: {confirm: "Are you sure?"}, remote: true %>
  <% end %>
</div>
<hr />

</div>
