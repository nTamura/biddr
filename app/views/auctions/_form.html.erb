<%= simple_form_for @auction, html: { class: 'form-horizontal' } do |f| %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :end_date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :reserve_price, as: :float %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('input.datepicker').data({behaviour: "datepicker"}).datepicker({ format: 'yyyy-mm-dd' });
  });
</script>
